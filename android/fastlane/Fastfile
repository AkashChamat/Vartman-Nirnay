name: Deploy to Play Store

on:
  push:
    branches: [ main ]
  workflow_dispatch: # manual trigger

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest

    env:
      PACKAGE_NAME: com.vartmannew

    steps:
      # 1Ô∏è‚É£ Checkout code
      - name: Checkout repository
        uses: actions/checkout@v4

      # 2Ô∏è‚É£ Validate required secrets
      - name: Validate secrets
        run: |
          if [ -z "${{ secrets.SIGNING_KEY }}" ]; then
            echo "‚ùå SIGNING_KEY secret is not set"
            exit 1
          fi
          if [ -z "${{ secrets.PLAY_STORE_JSON_KEY }}" ]; then
            echo "‚ùå PLAY_STORE_JSON_KEY secret is not set"
            exit 1
          fi
          if [ -z "${{ secrets.ALIAS }}" ]; then
            echo "‚ùå ALIAS secret is not set"
            exit 1
          fi
          if [ -z "${{ secrets.KEY_STORE_PASSWORD }}" ]; then
            echo "‚ùå KEY_STORE_PASSWORD secret is not set"
            exit 1
          fi
          if [ -z "${{ secrets.KEY_PASSWORD }}" ]; then
            echo "‚ùå KEY_PASSWORD secret is not set"
            exit 1
          fi
          echo "‚úÖ All secrets are set"

      # 3Ô∏è‚É£ Setup Node.js
      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '18'

      # 4Ô∏è‚É£ Install dependencies
      - name: Install dependencies
        run: npm ci --legacy-peer-deps

      # 5Ô∏è‚É£ Setup Java
      - name: Setup Java
        uses: actions/setup-java@v4
        with:
          distribution: 'zulu'
          java-version: '17'

      # 6Ô∏è‚É£ Setup Android SDK
      - name: Setup Android SDK
        uses: android-actions/setup-android@v3
      - name: Install Android SDK 35
        run: sdkmanager "platforms;android-35"

      # 7Ô∏è‚É£ Make gradlew executable
      - name: Make gradlew executable
        run: chmod +x ./android/gradlew

      # 8Ô∏è‚É£ Decode signing key
      - name: Decode keystore
        run: echo "${{ secrets.SIGNING_KEY }}" | base64 -d > android/app/upload-keystore.jks

      # 9Ô∏è‚É£ Build Release AAB
      - name: Build Release AAB
        run: |
          cd android
          ./gradlew bundleRelease
        env:
          MYAPP_UPLOAD_STORE_FILE: upload-keystore.jks
          MYAPP_UPLOAD_KEY_ALIAS: ${{ secrets.ALIAS }}
          MYAPP_UPLOAD_STORE_PASSWORD: ${{ secrets.KEY_STORE_PASSWORD }}
          MYAPP_UPLOAD_KEY_PASSWORD: ${{ secrets.KEY_PASSWORD }}

      # üîü Verify AAB
      - name: Verify AAB
        run: |
          if [ ! -f "android/app/build/outputs/bundle/release/app-release.aab" ]; then
            echo "‚ùå AAB file not found"
            exit 1
          fi
          echo "‚úÖ AAB created successfully"
          ls -la android/app/build/outputs/bundle/release/

      # 1Ô∏è‚É£1Ô∏è‚É£ Setup Ruby / Fastlane
      - name: Setup Ruby
        uses: ruby/setup-ruby@v1
        with:
          ruby-version: '3.2'
          bundler-cache: true
          working-directory: android/fastlane

      # 1Ô∏è‚É£2Ô∏è‚É£ Install Fastlane gems
      - name: Install Fastlane gems
        run: |
          cd android/fastlane
          bundle config path vendor/bundle
          bundle install --jobs 4 --retry 3

      # 1Ô∏è‚É£3Ô∏è‚É£ Deploy to Play Store (Internal Testing)
      - name: Deploy to Play Store
        run: |
          cd android/fastlane
          echo "${{ secrets.PLAY_STORE_JSON_KEY }}" > /tmp/play-store-key.json
          export JSON_KEY_PATH=/tmp/play-store-key.json
          export AAB_PATH=$(realpath ../app/build/outputs/bundle/release/app-release.aab)
          export PACKAGE_NAME=com.vartmannew
          bundle exec fastlane internal --verbose

      # 1Ô∏è‚É£4Ô∏è‚É£ Cleanup sensitive files
      - name: Cleanup
        if: always()
        run: |
          rm -f android/app/upload-keystore.jks
          rm -f /tmp/play-store-key.json
